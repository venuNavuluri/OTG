        <locationX>568</locationX>
        <locationY>307</locationY>
        <defaultConnector>
            <targetReference>Get_Opportunity_Values</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Is_New</name>
            <conditionLogic>and</conditionLogic>
