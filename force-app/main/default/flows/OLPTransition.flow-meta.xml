        </rules>
    </decisions>
    <decisions>
        <description>Type is OLP</description>
        <name>Type_is_OLP</name>
        <label>Type is OLP</label>
        <locationX>834</locationX>
        <locationY>211</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Yes</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Type</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>OLP Transition</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_OLP_Lookup</targetReference>
            </connector>
            <label>Yes</label>
        </rules>
    </decisions>
    <decisions>
        <description>Checks whether the type has been updated</description>
